{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/tests/*.test.ts", "src/tests/test.setup.ts"]
}
